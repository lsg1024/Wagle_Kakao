<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pair_guestProfile"
        android:layout_width="42dp"
        android:layout_height="42dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/pair_users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="강와글"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/pair_guestProfile"
        app:layout_constraintStart_toEndOf="@+id/pair_guestProfile"
        app:layout_constraintTop_toTopOf="@+id/pair_guestProfile" />


    <ImageView
        android:id="@+id/host_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/frame_edit"
        app:layout_constraintBottom_toBottomOf="@+id/pair_users"
        app:layout_constraintStart_toEndOf="@+id/pair_users"
        app:layout_constraintTop_toTopOf="@+id/pair_users" />

</androidx.constraintlayout.widget.ConstraintLayout>