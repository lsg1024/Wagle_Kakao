<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/your_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/your_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="강와글"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/your_Text"
        app:layout_constraintTop_toTopOf="@+id/your_profile" />

    <TextView
        android:id="@+id/your_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/your_chat_shape"
        android:elevation="5dp"
        android:padding="10dp"
        android:text="안녕하세요"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/your_profile"
        app:layout_constraintTop_toBottomOf="@+id/your_name" />

    <TextView
        android:id="@+id/your_Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="시간"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/your_Text"
        app:layout_constraintStart_toEndOf="@+id/your_Text" />



</androidx.constraintlayout.widget.ConstraintLayout>